{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: FastAPI (8000)",
      "type": "shell",
      "command": "python backend/main.py",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Frontend: Vite (3000)",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Local:\\s*http://localhost:3000.*",
          "endsPattern": ".*ready in.*ms.*"
        }
      }
    },
    {
      "label": "Tunnel: ngrok → 3000",
      "type": "shell",
      "command": "npm run tunnel:web",
      "problemMatcher": []
    },
    {
      "label": "Tunnel: ngrok → 8000",
      "type": "shell",
      "command": "npm run tunnel:backend",
      "problemMatcher": []
    }
  ]
}

